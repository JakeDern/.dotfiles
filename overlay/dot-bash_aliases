# General
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Git
alias g='git'
alias gb='git branch'
alias gs='git status'
alias ga='git add'
alias gA='git add -A'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gp='git push'
alias grh='git reset --hard'
alias grs='git reset --soft'
alias gco='git checkout'
alias gg='git add -A && git commit -m "c" && git push'

